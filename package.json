{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Quick setup with React.",
  "main": "src/index.js",
  "scripts": {
    "dev": "rm -rf dist/*; webpack --mode=development --watch",
    "prod": "rm -rf dist/*; webpack --mode=production",
    "start": "rm -rf dist/*; webpack-dev-server --hot --port 8080"
  },
  "author": "Vasilios Magriplis",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "7.4.4",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "css-loader": "3.2.0",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "0.8.0",
    "node-sass": "4.12.0",
    "npm-check-updates": "^3.1.21",
    "sass-loader": "8.0.0",
    "style-loader": "1.0.0",
    "url-loader": "^2.1.0",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.7",
    "webpack-dev-server": "^3.8.0",
    "eslint": "6.3.0",
    "eslint-loader": "3.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-react": "7.14.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-debugger": "off",
      "no-console": "off",
      "no-unused-vars": "warn",
      "react/prop-types": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "root": true
  }
}
